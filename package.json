{
  "name": "aerotage-time-reporting-app",
  "version": "1.0.0",
  "productName": "Aerotage Time Reporting",
  "description": "Professional time tracking and billing application for Aerotage Design Group",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "npm run dev:clean && NODE_ENV=development concurrently \"npm run dev:renderer\" \"wait-on http://localhost:3000 && electronmon .\"",
    "dev:clean": "lsof -ti:3000 | xargs kill -9 || true",
    "dev:renderer": "webpack serve --mode development",
    "build": "webpack --mode production && electron-builder",
    "build:renderer": "webpack --mode production",
    "build:mac": "npm run build:renderer && electron-builder --mac",
    "dist": "npm run build:renderer && electron-builder --mac --publish=never",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint src/**/*.{js,ts,tsx}",
    "lint:fix": "eslint src/**/*.{js,ts,tsx} --fix",
    "lint:check": "eslint src/**/*.{js,ts,tsx} --max-warnings 0",
    "lint:report": "eslint src/**/*.{js,ts,tsx} --format html --output-file ./coverage/eslint-report.html",
    "lint:staged": "eslint --fix",
    "check-deps": "node scripts/check-stable-deps.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed"
  },
  "keywords": [
    "electron",
    "time-tracking",
    "billing",
    "aerotage"
  ],
  "author": {
    "name": "Aerotage Design Group, Inc",
    "email": "info@aerotage.com"
  },
  "license": "ISC",
  "private": true,
  "build": {
    "appId": "com.aerotage.time-reporting",
    "productName": "Aerotage Time Reporting",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.business",
      "icon": "assets/icons/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "^7.25.9",
    "@babel/preset-env": "^7.25.9",
    "@babel/preset-react": "^7.25.9",
    "@babel/preset-typescript": "^7.25.9",
    "@playwright/test": "^1.40.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.21",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^29.7.0",
    "concurrently": "^9.1.2",
    "css-loader": "^7.1.2",
    "electron": "^36.3.1",
    "electron-builder": "^25.1.8",
    "electron-reload": "^1.5.0",
    "electronmon": "^2.0.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "events": "^3.3.0",
    "html-webpack-plugin": "^5.6.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.40.0",
    "postcss": "^8.5.3",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.17",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "wait-on": "^8.0.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.1"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.0.1",
    "aws-amplify": "^6.14.4",
    "chart.js": "^4.4.9",
    "date-fns": "^4.1.0",
    "electron-log": "^5.2.4",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.3.9",
    "jspdf": "^3.0.1",
    "react": "^19.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.56.4",
    "react-router-dom": "^7.6.0",
    "xlsx": "^0.18.5",
    "zod": "^3.25.23"
  }
}
